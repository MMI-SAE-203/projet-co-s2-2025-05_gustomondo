---
// src/components/AuthButtons.astro
const { mobile } = Astro.props;
---
{mobile ? (
  <!-- Mode mobile : boutons en colonne, texte blanc -->
  <div class="flex flex-col space-y-2">
    <a
      href="/login"
      class="block py-2 text-white hover:underline"
      >Connexion</a
    >
    <a
      href="/register"
      class="block py-2 text-white hover:underline"
      >Inscription</a
    >
  </div>
) : (
  <!-- Mode desktop : deux boutons côte-à-côte -->
  <div class="flex items-center space-x-3">
    <!-- Bouton « Connexion » -->
    <a
      href="/login"
      class="px-4 py-2 bg-white text-[#D2193E] rounded-md hover:bg-gray-100 transition"
      >Connexion</a
    >

    <!-- Bouton « Inscription » -->
    <a
      href="/register"
      class="px-4 py-2 border border-white text-white rounded-md hover:bg-red-500 transition"
      >Inscription</a
    >
  </div>
)}
