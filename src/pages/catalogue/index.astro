---
import { getProduits } from "../../JS/backend.mjs";
import Layout from "../../layouts/Layout.astro";

const produits = await getProduits();
---

<Layout title="Catalogue">
  <section class="py-16 px-4 bg-gray-50">
    <div class="max-w-7xl mx-auto">
      <h1 class="text-3xl md:text-4xl font-extrabold text-center mb-12 text-gray-900">
        Catalogue
      </h1>

      <!-- Masonry/grid list -->
      <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
        {produits.map((p) => (
          <a
            href={`/catalogue/${p.id}`}
            class="group block bg-white rounded-lg overflow-hidden shadow hover:shadow-lg transition"
          >
            <img
              src={p.imgUrl}
              alt={p.nom}
              loading="lazy"
              class="w-full h-48 object-cover object-center
                     group-hover:scale-105 transition-transform duration-200"
            />

            <div class="p-4">
              <h2 class="text-lg font-semibold text-gray-800 group-hover:text-[#D2193E]">
                {p.nom}
              </h2>
              {p.prix && (
                <p class="text-sm text-gray-600 mt-1">{p.prix}&nbsp;â‚¬</p>
              )}
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
</Layout>
