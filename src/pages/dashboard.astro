---
// src/pages/dashboard.astro
import Layout from "../layouts/Layout.astro";
import { getUserFromToken } from '../JS/backend.mjs';

// 1) On désactive le prerender, car on dépend du cookie
export const prerender = false;

// 2) Lecture du header “cookie” côté server
const cookieHeader = Astro.request.headers.get('cookie') || '';


function getCookieValue(header, name) {
  const match = header
    .split(';')
    .map(c => c.trim())
    .find(c => c.startsWith(`${name}=`));
  if (!match) return null;
  return decodeURIComponent(match.split('=')[1]);
}

const token = getCookieValue(cookieHeader, 'pb_token');

// 3) Si on a un token, on tente de récupérer l’utilisateur via backend.getUserFromToken
let user = null;
let errorMessage = null;

if (token) {
  user = await getUserFromToken(token);
  if (!user) {
    // si getUserFromToken a renvoyé null, le token est invalide/expiré
    errorMessage = 'Session invalide ou expirée. Merci de vous reconnecter.';
  }
} else {
  // pas de token
  errorMessage = 'Vous n’êtes pas connecté(e).';
}
---

<Layout title="Mon Compte – GustoMundo">
  <section class="flex flex-col items-center py-12">
    <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
      <h1 class="text-2xl font-semibold mb-6 text-center">Mon compte</h1>

      <!-- Affiche l’erreur si on n’a pas d’utilisateur valide -->
      {errorMessage && (
        <div class="text-red-600 text-center mb-4">
          {errorMessage}
          <p>
            <a href="/login" class="text-blue-600 hover:underline">Aller à la connexion</a>
          </p>
        </div>
      )}

      <!-- Sinon, on affiche l’objet user -->
      {user && (
        <div class="flex flex-col items-center">
          {user.avatarUrl ? (
            <img
              src={user.avatarUrl}
              alt={`Avatar de ${user.username}`}
              class="w-24 h-24 rounded-full mb-4"
            />
          ) : (
            <div class="w-24 h-24 bg-gray-200 rounded-full mb-4 flex items-center justify-center">
              <span class="text-gray-500 text-xl">?</span>
            </div>
          )}

          <p class="text-gray-700 mb-2"><strong>Pseudo :</strong> {user.username}</p>
          <p class="text-gray-700 mb-2"><strong>Email :</strong> {user.email}</p>

        
          <form method="post" action="/api/logout" class="mt-4 w-full">
            <button
              type="submit"
              class="w-full py-2 bg-red-600 text-white rounded-md hover:bg-red-700 transition"
            >
              Se déconnecter
            </button>
          </form>
        </div>
      )}
    </div>
  </section>
</Layout>
